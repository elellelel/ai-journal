<%= form_with(model: entry, local: true, class: "needs-validation", novalidate: true) do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:
      </h4>
      <ul>
        <% entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control", rows: 5, required: true %>
  </div>

  <div class="form-check">
  <input class="form-check-input" type="checkbox" id="generateAIResponse" name="generate_ai_response">
  <label class="form-check-label" for="generateAIResponse">
    Generate AI Response
  </label>
</div>

  <div class="mb-3">
    <%= form.submit "Save Entry", class: "btn btn-primary" %>
  </div>
<% end %>
