<%= form_with(model: [current_user, @entry], local: true) do |form| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h4><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h4>
      <ul>
        <% @entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <div data-component="TinyMCEEditor"></div>
  </div>

  <div class="mb-3">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" id="generateAIResponse" name="generate_ai_response">
      <label class="form-check-label" for="generateAIResponse">
        Generate AI Response
      </label>
    </div>
  </div>

  <h3>Link Existing Entries</h3>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>
          <input type="checkbox" id="selectAll">
        </th>
        <th>Title</th>
      </tr>
    </thead>
    <tbody>
      <% @existing_entries.each do |existing_entry| %>
        <tr>
          <td>
            <%= check_box_tag "entry[linked_entry_ids][]", existing_entry.id, @entry.linked_entry_ids.include?(existing_entry.id), class: "entry-checkbox" %>
          </td>
          <td><%= existing_entry.title %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="mb-3">
    <%= form.submit "Save Entry", class: "btn btn-primary" %>
  </div>
<% end %>